    <!-- Blue line south -->
    <model name="blue_line_south">
      <static>true</static>
      <pose>0 -2.0 0.01 0 0 0</pose>
      <link name="link">
        <visual name="visual">
          <geometry>
            <box>
              <size>6 0.05 0.01</size>
            </box>
          </geometry>
          <material>
            <ambient>0.1 0.2 1 1</ambient>
            <diffuse>0.1 0.2 1 1</diffuse>
