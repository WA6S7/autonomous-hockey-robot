<?xml version="1.0"?>
<sdf version="1.7">
  <world name="hockey_world">

    <!-- LIGHTING -->
    <ambient>0.6 0.6 0.6 1</ambient>
    <background>0.9 0.9 0.9 1</background>

    <light name="sun" type="directional">
      <pose>0 0 10 0 0 0</pose>
      <diffuse>1 1 1 1</diffuse>
      <specular>0.1 0.1 0.1 1</specular>
      <direction>-0.2 0.3 -1</direction>
      <cast_shadows>true</cast_shadows>
    </light>

    <!-- FLOOR (ICE) -->
    <model name="floor">
      <static>true</static>
      <link name="floor_link">
        <visual name="visual">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>20 20</size>
            </plane>
          </geometry>
          <material>
            <!-- ice colour -->
            <ambient>0.95 0.95 1.0 1</ambient>
            <diffuse>0.95 0.95 1.0 1</diffuse>
          </material>
        </visual>
        <collision name="collision">
          <geometry>
            <plane>
              <normal>0 0 1</normal>
              <size>20 20</size>
            </plane>
          </geometry>
        </collision>
      </link>
    </model>

    <!-- RINK LINES (thin boxes on the floor) -->

    <!-- Centre red line -->
    <model name="centre_line">
      <static>true</static>
      <pose>0 0 0.01 0 0 0</pose>
      <link name="link">
        <visual name="visual">
          <geometry>
            <box>
              <size>6 0.05 0.01</size>
            </box>
          </geometry>
          <material>
            <ambient>1 0 0 1</ambient>
            <diffuse>1 0 0 1</diffuse>
          </material>
        </visual>
      </link>
    </model>

    <!-- Blue line north -->
    <model name="blue_line_north">
      <static>true</static>
      <pose>0 2.0 0.01 0 0 0</pose>
